
"***********************
"Faster split navigation
"***********************
nnoremap <C-J> <C-W><C-J>
nnoremap <C-K> <C-W><C-K>
nnoremap <C-L> <C-W><C-L>
nnoremap <C-H> <C-W><C-H>

set history=500
set hlsearch
set incsearch
set lazyredraw
set list listchars=tab:\-\-,trail:Â·
set modelines=0
set noswapfile
set number
set numberwidth=5
set relativenumber
set ruler
set shell=/bin/bash
set showmode
set splitbelow
set splitright
set textwidth=78
set ttimeout
set ttimeoutlen=20
set ttyfast
set visualbell
set wildmenu
set wildmode=list:longest,full

"***********************
"Softtabs, 2 spaces
"***********************
set expandtab
set shiftwidth=2
set softtabstop=2
set tabstop=2

"***********************
"Search settings
"***********************
set smartcase
set ignorecase

"***********************
"Highlight cursor row
"***********************
au WinLeave * set nocursorline nocursorcolumn
au WinEnter * set cursorline
set cursorline

"***********************
"Ensure format options are set for line wrapping purposes
"***********************
autocmd BufNewFile,BufRead * setlocal formatoptions+=croqlt

